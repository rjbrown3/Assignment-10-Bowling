@{
}
@model IEnumerable<Teams>

<h4>@ViewBag.SelectedType</h4>  <!--Display Team Name user selected (from TeamViewComponent.cs)-->
<br />

<a class="btn btn-block text-dark btn-outline-secondary" asp-controller="Home" asp-route-teamid="">Home</a>
<br />

@foreach (var x in Model)
{
    <!--highlight nav button if user selects it-->
    <a class="btn btn-block text-dark @(x.TeamName == ViewBag.SelectedType ? "btn-primary" : "btn-outline-secondary")" 
       asp-action="Index" asp-controller="Home"
       asp-route-teamid="@x.TeamId"
       asp-route-team="@x.TeamName"
       asp-route-pagenum="1">@x.TeamName</a>
    <br />
}